// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "soft_wrap": "editor_width",
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-reasoner"
    },
    "model_parameters": []
  },
  "language_models": {
    "ollama": {
      "api_url": "http://10.0.1.11:11434"
    }
  },
  "diagnostics": {
    "lsp_pull_diagnostics": {
      "debounce_ms": 25
    },
    "inline": {
      "update_debounce_ms": 25
    }
  },
  "lsp_highlight_debounce": 50,
  "inlay_hints": {
    "enabled": false
  },
  "current_line_highlight": "gutter",
  "buffer_font_weight": 250.0,
  "buffer_line_height": "comfortable",
  "jsx_tag_auto_close": {
    "enabled": false
  },
  "use_auto_surround": false,
  "use_autoclose": false,
  "relative_line_numbers": "enabled",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "agent_ui_font_size": 14.0,
  "buffer_font_family": "Fira Code",
  "vim_mode": true,
  "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 14.0,
  "theme": "Monokai Nebula",
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          // "command": "clippy",
          // "extraArgs": [
          // "--",
          // "--no-deps",
          // "-Dclippy::correctness",
          // "-Dclippy::complexity",
          // "-Wclippy::perf",
          // "-Wclippy::pedantic"
          // ]
          "command": "check"
        }
      }
    }
  },
  "auto_install_extensions": {
    "codebook": true,
    "docker-compose": true,
    "dockerfile": true,
    "html": true,
    "lua": true,
    "monokai-nebula": true,
    "pylsp": true,
    "toml": true,
    "verilog": true
  },
  "file_types": {
    "C": ["cl"]
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#130e16f0",
    "status_bar.background": "#130e16f0",
    "title_bar.background": "#130e16f0",
    "elevated_surface.background": "#130e16f0",
    "surface.background": "#130e16f0",
    "editor.background": "#00000000",
    "editor.gutter.background": "#00000000",
    "editor.line_number": "#b5bfe299",
    "editor.active_line_number": "#8caaee",
    "editor.active_line.background": "#51576d40",
    "editor.indent_guide": "#8caaee1a",
    "editor.indent_guide_active": "#8caaee33",

    // "border": "#73799440",
    // "border.variant": "#73799420",
    // "hint.background": "#414559cc",

    "tab_bar.background": "#00000000",
    "tab.active_background": "#8caaee20",
    "tab.inactive_background": "#00000000",
    "element.selected": "#8caaee20",

    "panel.background": "#00000000",
    "panel.indent_guide": "#8caaee12",
    "panel.indent_guide_hover": "#8caaee16",
    "panel.indent_guide_active": "#8caaee1a",
    "panel.focused_border": "#8caaeef6",

    "toolbar.background": "#00000000",
    "terminal.background": "#00000000",
    "scrollbar.track.background": "#00000000",
    "scrollbar.track.border": "#00000000",
    "scrollbar.thumb.background": "#8caaee20",

    "ghost_element.background": "#8caaee05",
    "ghost_element.hover": "#8caaee10",
    "ghost_element.active": "#8caaee15",
    "ghost_element.selected": "#8caaee20",
    "drop_target.background": "#8caaee20",
    "element.hover": "#8caaee10",
    "editor.highlighted_line.background": "#8caaee25"
  }
}
